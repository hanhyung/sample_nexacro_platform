        <Grid id="Grid_calendar" taborder="0" binddataset="ds_calendar" useinputpanel="false" autofittype="col" onheadclick="Grid_calendar_onheadclick" left="16" top="96" height="400" selecttype="cell" width="480" autosizingtype="none" cellsizingtype="none" extendsizetype="none">
