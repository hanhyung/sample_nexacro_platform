        </Grid>
        <Button id="Button04" taborder="8" text="filter initializing" left="30.47%" top="221" right="55.86%" height="43" onclick="Button04_onclick"/>
        <Button id="Button02" taborder="9" text="filter execution" left="30.47%" top="131" right="55.86%" height="43" onclick="Button02_onclick"/>
        <Static id="Static00" taborder="10" left="1.46%" top="296" right="68.75%" height="29"/>
