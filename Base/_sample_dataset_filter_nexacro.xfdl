  <Form id="sample_dataset_filter_nexacro" classname="sample_dataset_filter_nexacro" left="0" top="0" width="1024" height="768" titletext="Dataset &gt; filter" oninit="sample_dataset_filter_nexacro_oninit" onload="sample_dataset_filter_nexacro_onload">
