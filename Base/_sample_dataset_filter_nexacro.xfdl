        <Button id="Button01" taborder="1" text="filterstr setting" onclick="Button01_onclick" left="30.47%" top="86" right="55.86%" height="43"/>
        <Button id="Button03" taborder="4" text="filter distinct" onclick="Button03_onclick" left="30.47%" top="176" right="55.86%" height="43"/>
        <Grid id="Grid00" taborder="5" autoenter="select" useinputpanel="false" autofittype="col" left="1.46%" top="86" right="70.31%" height="197" binddataset="ds">
          <Formats>
